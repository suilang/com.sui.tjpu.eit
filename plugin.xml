<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.sui.tjpu.eit.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="com.sui.tjpu.eit.Perspective"
            id="com.sui.tjpu.eit.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.sui.tjpu.eit.application"
            name="TJPU-EIT">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="com.sui.tjpu.eit.commands.ExitHandler"
            id="com.sui.tjpu.eit.commands.Exit"
            name="Exit">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="com.sui.tjpu.eit.commands.Exit"
                  label="Exit"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.sui.tjpu.eit.ViewPart1"
            id="com.sui.tjpu.eit.view1"
            name="name"
            restorable="true">
      </view>
      <view
            class="com.sui.tjpu.eit.ShowImage"
            icon="icons/alt_window_16.gif"
            id="com.sui.tjpu.eit.showimage"
            name="Reconstruction"
            restorable="true">
      </view>
      <view
            class="com.sui.tjpu.eit.Configure"
            id="com.sui.tjpu.eit.configure"
            name="configure"
            restorable="true">
      </view>
      <view
            class="com.sui.tjpu.eit.Control"
            id="com.sui.tjpu.eit.control"
            name="Control"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               closeable="true"
               id="com.sui.tjpu.eit.showimage"
               minimized="false"
               moveable="true"
               ratio="0.72f"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
         <view
               closeable="true"
               id="com.sui.tjpu.eit.configure"
               minimized="false"
               moveable="true"
               ratio="0.3f"
               relationship="top"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
         <view
               closeable="true"
               id="com.sui.tjpu.eit.control"
               minimized="false"
               moveable="true"
               ratio="0.65f"
               relationship="bottom"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
